<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="product" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>model.Product</class>
    	<class>model.ProductManager</class>
    	<properties>
    		<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./src/main/java/database/PRODUCT" />
    		<property name="jakarta.persistence.jdbc.username" value="sa"/>
    		<property name="jakarta.persistence.jdbc.password" value=""/>
    		<property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    		<property name="hibernate.connection.pool_size" value="10"/>
    	</properties>
    </persistence-unit>
    <persistence-unit name="dish" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>model.Dish</class>
    	<properties>
    		<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./src/main/java/database/DISH" />
    		<property name="jakarta.persistence.jdbc.username" value="sa"/>
    		<property name="jakarta.persistence.jdbc.password" value=""/>
    		<property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    		<property name="hibernate.connection.pool_size" value="10"/>
    	</properties>
    </persistence-unit>
</persistence>